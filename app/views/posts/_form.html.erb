<%= link_to '回到文章總覽', posts_path %>

<% if post.errors.any? %>
  <ul>
    <% post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for post do |form| %>

  <div>
    <%= form.label :title, '文章標題' %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content, '文章內文' %>
    <%= form.text_area :content %>
  </div>

  <%= form.submit '確認' %>

<% end %>